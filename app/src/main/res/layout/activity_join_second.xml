<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Join_second">

    <View
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/ic_launcher_background"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingTop="@dimen/_50sdp">

            <TextView
                android:id="@+id/classCodeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:fontFamily="sans-serif-light"
                android:text="Class code"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/classcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@+id/collegeNameText"
                android:fontFamily="sans-serif-light"
                android:text="class code"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/collegeNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/classcode"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:text="College name"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/collegename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/collegeNameText"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@+id/collegeNameText"
                android:fontFamily="sans-serif-light"
                android:text="College name"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/collegename"
                android:layout_marginTop="20dp"
                tools:itemCount="5"
                tools:listitem="@layout/item_join_two"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>